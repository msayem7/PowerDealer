# Powerdealer Environment Configuration
# Copy this to .env and fill in your values

# ===================
# Domain & Networking
# ===================
DOMAIN_NAME=https://srv1165276.hstgr.cloud

# ===================
# Docker Configuration
# ===================
DOCKER_REGISTRY=ghcr.io
DOCKER_USERNAME=your-github-username
IMAGE_TAG=latest

# ===================
# Django Configuration
# ===================
# Generate with: python3 -c 'from secrets import token_urlsafe; print(token_urlsafe(50))'
SECRET_KEY=generate-a-secure-key-here

DEBUG=False

# Comma-separated list of allowed hosts
ALLOWED_HOSTS=srv1165276.hstgr.cloud,www.yourdomain.com

# ===================
# Database
# ===================
POSTGRES_DB=powerdealer
POSTGRES_USER=powerdealer
# Use a strong password! Generate with: openssl rand -base64 32
POSTGRES_PASSWORD=your-strong-database-password

# ===================
# CORS Configuration
# ===================
# Comma-separated list of allowed origins (include https://)
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ===================
# Frontend Build
# ===================
VITE_API_URL=https://yourdomain.com/api

# ===================
# Optional: GitHub Token for private registry
# ===================
# GITHUB_TOKEN=ghp_your_token_here
